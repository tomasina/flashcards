<div class="container">
  <h3>Все карточки</h3>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Оригинальный</th>
        <th>Перевод</th>
        <th>Дата пересмотра</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.review_date %></td>
        <td><%= link_to 'Редактировать', edit_card_path(card) %></td>
        <td><%= link_to 'Удалить', card_path(card),
              method: :delete,
              data: { confirm: 'Уеренны, что хотите удалить?' } %></td>
      </tr>
    <% end %>
  </table>
</div>
